
@{
    ViewData["Title"] = "Index";
    var SelectedOrderId = 1;
}

<div style="text-align: center;">
    <h3 style="background-color: yellow;">ORDER DETAILS</h3>
    @using (Html.BeginForm("Details", "Order", FormMethod.Get))
    {
        <div>
            <label for="orderid">Order ID</label>
            <select id="orderid" name="id" size="1">
                @foreach (var oid in Model)
                {
                    <option value="@oid.OrderId">@oid.OrderId</option>
                }
            </select>
            <button type="submit" style="background-color: lightblue;">FIND</button>
        </div>
    }
</div>
